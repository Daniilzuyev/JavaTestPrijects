public class any{
public static void main(String[] args) {
     int i = 1;
     System.out.println(i--);  // напечатает 1 и после печати станет 0
     System.out.println(i);    // тут видно что стало 0
     System.out.println(i + 1);  // тут добавляется к 0 число 2 но не присваивается
                                 // Если б нужно юыло добавить 2 с присваиванием, тогда нужно написать перед печатью i +=2
     System.out.println(i++);  // печатается 0, так как +2 было без присваивания и после печати становится 1
     System.out.println(i);   // тут уже напечатается 1
     System.out.println(++i);  // префиксная операция, с начала добавляется 1 и сразу печатается     
}
}
